@page
@model HotelManagement6.Pages.Reservations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservation.ReservationId" />
            <div class="form-group">
                <label asp-for="Reservation.CheckIn" class="control-label"></label>
                <input asp-for="Reservation.CheckIn" class="form-control" />
                <span asp-validation-for="Reservation.CheckIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.CheckOut" class="control-label"></label>
                <input asp-for="Reservation.CheckOut" class="form-control" />
                <span asp-validation-for="Reservation.CheckOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.Price" class="control-label"></label>
                <input asp-for="Reservation.Price" class="form-control" />
                <span asp-validation-for="Reservation.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a> |
                <input type="submit" value="Save" class="btn btn-primary" />
                
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
